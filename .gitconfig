[user]
  name = Alex Blackie
  email = alex@theblackies.ca

[core]
  excludesfile = ~/.gitignore_global
  attributesfile = ~/.gitattributes_global

[alias]
  br = branch
  ci = commit
  co = checkout
  df = diff
  pp = !"git pull && git push"
  st = status

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  log = true

[rerere]
  enabled = 1

